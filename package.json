{
  "name": "obs-dailynotes",
  "version": "2.4.0",
  "description": "Google Calendar integration with GTD system, Apple Reminders sync, and comprehensive testing framework for Obsidian daily notes",
  "main": "index.js",
  "dependencies": {
    "dotenv": "^16.6.1",
    "googleapis": "^66.0.0"
  },
  "scripts": {
    "daily": "node index.js",
    "reminders:generate": "node tools/generateReminders.js",
    "reminders:pull": "node tools/pullRemindersWithShared.js",
    "reminders:pull-old": "node tools/pullReminders.js",
    "reminders:sync:deprecated": "node tools/syncReminders.js",
    "reminders:sync-full": "node tools/syncRemindersEnhanced.js",
    "reminders:sync-fast": "node tools/syncRemindersFast.js",
    "people:index": "node tools/buildPeopleIndex.js",
    "people:enrich": "node tools/enrichPersonPage.js",
    "people:fetch-cal": "node tools/fetchCalendarContext.js",
    "people:fetch-web": "node tools/fetchPublicSnippets.js",
    "people:enrich-llm": "node tools/enrichFromLLM.js",
    "people:normalize": "node tools/normalizePersonPage.js",
    "people:public": "node tools/fetchPublicSnippets.js",
    "people:batch": "node tools/batchEnrichPeople.js",
    "people:all": "node tools/runAllPeople.js",
    "people:tag-lists": "node tools/tagPeopleWithLists.js",
    "people:generate-from-dailies": "node tools/generatePeopleFromDailyNotes.js",
    "people:import-csv": "node tools/importContactsFromCSV.js",
    "gtd:process": "node tools/processGTD.js",
    "gtd:morning": "npm run reminders:pull && npm run gtd:process && node tools/generateTodayTodos.js",
    "gtd:sync": "npm run reminders:sync-fast && npm run reminders:pull && npm run gtd:process",
    "reminders:sync": "echo '\n[DEPRECATED] Use npm run gtd:sync or npm run reminders:sync-full\n' && npm run gtd:sync",
    "gtd:sync-full": "npm run reminders:sync-full && npm run reminders:pull && npm run gtd:process",
    "gtd:evening": "npm run gtd:sync",
    "test": "python run_tests.py all",
    "test:unit": "python run_tests.py unit",
    "test:integration": "python run_tests.py integration",
    "test:coverage": "python run_tests.py coverage",
    "test:watch": "python run_tests.py watch",
    "test:js": "jest"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.3.3"
  }
}
