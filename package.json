{
  "name": "obs-dailynotes",
  "version": "2.4.0",
  "description": "Google Calendar integration with GTD system, Apple Reminders sync, and comprehensive testing framework for Obsidian daily notes",
  "main": "index.js",
  "dependencies": {
    "dotenv": "^16.6.1",
    "googleapis": "^66.0.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "imap": "^0.8.19"
  },
  "scripts": {
    "people:upsert-template": "node tools/upsertPersonTemplate.js",
    "daily": "node index.js",
    "reminders:generate": "node tools/generateReminders.js",
    "reminders:pull": "node tools/pullRemindersWithShared.js",
    "reminders:pull-old": "node tools/pullReminders.js",
    "reminders:sync:deprecated": "node tools/syncReminders.js",
    "reminders:sync-full": "node tools/syncRemindersEnhanced.js",
    "reminders:sync-fast": "node tools/syncRemindersFast.js",
    "people:index": "node tools/buildPeopleIndex.js",
    "people:enrich": "node tools/enrichPersonPage.js",
    "people:fetch-cal": "node tools/fetchCalendarContext.js",
    "people:fetch-web": "node tools/fetchPublicSnippets.js",
    "people:enrich-llm": "node tools/enrichFromLLM.js",
    "people:normalize": "node tools/normalizePersonPage.js",
    "people:public": "node tools/fetchPublicSnippets.js",
    "people:batch": "node tools/batchEnrichPeople.js",
    "people:all": "node tools/runAllPeople.js",
    "people:tag-lists": "node tools/tagPeopleWithLists.js",
    "people:generate-from-dailies": "node tools/generatePeopleFromDailyNotes.js",
    "people:import-csv": "node tools/importContactsFromCSV.js",
    "gtd:process": "node tools/processGTD.js",
    "gtd:morning": "npm run reminders:pull && npm run gtd:process && node tools/generateTodayTodos.js",
    "ocr": "node tools/ocr_screenshots.js",
    "gtd:morning-ocr": "npm run reminders:pull && npm run gtd:process && node tools/generateTodayTodos.js && npm run ocr",
    "gtd:sync": "npm run reminders:sync-full && npm run reminders:pull && npm run gtd:process",
    "reminders:sync": "echo '\n[DEPRECATED] Use npm run gtd:sync or npm run reminders:sync-full\n' && npm run gtd:sync",
    "reminders:migrate-note-tags": "node tools/migrateNoteTagsToTitle.js",
    "gtd:sync-full": "npm run reminders:sync-full && npm run reminders:migrate-note-tags && npm run reminders:pull && npm run gtd:process",
    "gtd:evening": "npm run gtd:sync",
    "reminders:dedupe": "node tools/dedupeRemindersByTitle.js",
    "reminders:export-outbox": "node tools/exportAgendaToOutbox.js",
    "reminders:apply-outbox": "node tools/applyOutboxToReminders.js",
    "gtd:sync-dashboard": "node tools/syncFromDashboard.js",
    "test": "python run_tests.py all",
    "test:unit": "python run_tests.py unit",
    "test:integration": "python run_tests.py integration",
    "test:coverage": "python run_tests.py coverage",
    "test:watch": "python run_tests.py watch",
    "test:js": "jest",
    "graph:index": "node tools/knowledgeGraph/indexer.js",
    "graph:report": "node tools/knowledgeGraph/indexer.js --report",
    "graph:tags:plan": "node tools/knowledgeGraph/normalizeTags.js",
    "graph:tags:apply": "node tools/knowledgeGraph/normalizeTags.js --apply",
    "graph:tags:scan-code": "node tools/knowledgeGraph/planTagRefactor.js",
    "graph:tags:inline:plan": "node tools/knowledgeGraph/normalizeInlineTags.js",
    "graph:tags:inline:apply": "node tools/knowledgeGraph/normalizeInlineTags.js --apply",
    "graph:tags:migrate-inline-to-fm:plan": "node tools/knowledgeGraph/migrateInlineTagsToFrontmatter.js",
    "graph:tags:migrate-inline-to-fm:apply": "node tools/knowledgeGraph/migrateInlineTagsToFrontmatter.js --apply",
    "graph:tags:validate": "node tools/knowledgeGraph/validateTags.js",
    "mcp:kg": "node tools/mcpServers/knowledgeGraph.js",
    "graph:fm:harmonize:plan": "node tools/knowledgeGraph/harmonizeFrontmatter.js",
    "graph:fm:harmonize:apply": "node tools/knowledgeGraph/harmonizeFrontmatter.js --apply",
    "graph:docs:tag": "node tools/knowledgeGraph/tagDocumentation.js",
    "gmail:check": "node tools/gmailPreflightCheck.js",
    "gmail:test": "node tools/gmail_scope_test.js",
    "gmail:reauth": "GMAIL_DEEP=1 node tools/mcpServers/bootstrapGmailAuth.js",
    "gmail:reauth:readonly": "GMAIL_DEEP=1 node tools/mcpServers/bootstrapGmailAuth.js",
    "gmail:refresh": "node tools/mcpServers/refreshGmailToken.js",
    "gmail:fetch": "node tools/fetchGmailDirect.js",
    "gmail:fetch-enhanced": "node tools/fetchGmailDirectEnhanced.js",
    "gmail:fetch-quick": "node tools/quickGmailFetch.js",
    "gmail:flagged": "node tools/gmailFetchFlagged.js",
    "gmail:search-local": "node tools/searchMailApp.js",
    "gmail:test-priority": "node tools/testEmailSearchPriority.js",
    "gmail:fix-empty": "node tools/fixEmptyCaches.js",
    "gmail:fix-empty:dry": "node tools/fixEmptyCaches.js --dry-run",
    "gmail:fix-empty:run": "node tools/fixEmptyCaches.js --fix",
    "people:enrich-force": "FORCE_REFETCH=1 node tools/enrichFromLLM.js",
    "people:enrich-local": "SKIP_GMAIL=1 node tools/enrichFromLLM.js",
    "people:enrich-gmail": "SKIP_LOCAL=1 node tools/enrichFromLLM.js"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.3.3"
  }
}
